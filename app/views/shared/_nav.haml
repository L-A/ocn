%ul.nav.nav-pills
  %li{class: navigation_class(:popular)}
    = link_to t('.popular'), root_path
  %li{class: navigation_class(:newest)}
    = link_to t('.newest'), posts_newest_path
  - if user_signed_in?
    %li{class: navigation_class(:submit)}
      = link_to t('.submit'), posts_new_path
    %li
      = link_to t('.logout'), logout_path
  - else
    %li= link_to t('.signin'), user_omniauth_authorize_path(:github)
