<% content_for :current_section, :submit %>
<%= form_for @post, url: app_posts_path do |f| %>
  <% if @post.errors.any? %>
    <%# Ideally, we would have an render_error_messages(@post) helper %>
    <%= @post.errors.full_messages %>
  <% end %>

  <ul>
    <li>
      <%= f.label :url %>
      <%= f.url_field :url %>
    </li>

    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </li>

    <li>
      <%= submit_tag %>
    </li>
  </ul>
<% end %>
