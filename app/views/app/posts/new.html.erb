<% content_for :current_section, :submit %>
<%= form_tag posts_path, method: :post do %>
  <%= label_tag 'post[url]', 'URL' %>
  <%= text_field_tag 'post[url]' %>
  <%= label_tag 'post[title]', 'Title' %>
  <%= text_field_tag 'post[title]' %>
  <%= label_tag 'post[description]', 'Description' %>
  <%= text_area_tag 'post[description]' %>
  <%= submit_tag ('Submit') %>
<% end %>
